#!/bin/bash

DATADIR="capture/"
FEATUREDIR="feature/"

RAWFILES=`ls -l $DATADIR | awk '{print $9}' ` 

while [${#RAWFILES[@]} -eq 0]
do
RAWFILES=`ls -l $DATADIR | awk '{print $9}' 
done

for RAWFILE in $RAWFILES
do

	sfbcep -F WAVE -p 24 $DATADIR/${RAWFILE} ${FEATUREDIR}/${RAWFILE}.mfcc
	#EnergyDetector --config config/EnergyDetector.cfg --inputFeatureFilename  ${RAWFILE} 
	#NormFeat --config config/NormFeat.cfg --inputFeatureFilename  ${RAWFILE} 
	
	
done



